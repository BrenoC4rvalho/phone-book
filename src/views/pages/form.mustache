{{>partials/header}}

<form method="POST" class="container text-light mt-4">
    <h2 class="mb-3'">{{h2}}</h2>
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" id="name" name="name" class="form-control" value=" {{name}} ">
        </div>
        <div class="mb-3">
            <label for="last" class="form-label">Last Name:</label>
            <input type="text" id="last" name="last" class="form-control" value="{{last}}">
        </div>
        <div class="mb-3">
            <label for="number" class="form-label">Number:</label>
            <input type="tel" id="number" name="number" class="form-control" value="{{tel}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email"  name="email" class="form-control" value="{{email}}">
        </div>
    <button type="submit" class="mb-3 btn btn-primary">{{btn}}</button>
</form>

{{>partials/footer}}